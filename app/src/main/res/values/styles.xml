<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="StyledText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StyledText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StyledText.ActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@android:color/white</item>
    </style>

    <style name="StyledText.Edit">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="StyledButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="StyledButton.Login">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyledProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
